<!DOCTYPE html>
<html>
<head
	<% include ../partials/head %>
	<link rel="stylesheet" type="text/css" href="../css/game.css">
</head>
<body>
	<div class="container">
		<header>
			<% include ../partials/header %>
		</header>
		<main>
			<div class="row">
				<div class="col-md-4 col-md-push-8">
					<div id="player-display" class="alert alert-info" role="alert" style="display: none;"></div>
					<div id="connection-status" class="alert" role="alert" style="display: none;"></div>
					<form class="form" style="display: none;">
						<div class="form-group">
							<label for="url">Send your friend this link:</label>
							<input type="text" id="url" class="form-control" autofocus readonly>
						</div>
					</form>
					<div class="panel panel-default hidden-xs hidden-sm">
						<div class="panel-heading">
							<h2 class="panel-title">History</h2>
						</div>
						<table id="history-table" class="table">
							<thead>
								<tr>
									<th scope="col">Turn</th>
									<th scope="col">Player</th>
									<th scope="col">Location</th>
								</tr>
							</thead>
							<tbody></tbody>
						</table>
					</div>
				</div>
				<div class="col-md-8 col-md-pull-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h1 id="game-caption" class="panel-title">Game not yet started</h1>
						</div>
						<div class="panel-body">
							<div id="game" class="disabled"></div>
						</div>
					</div>
				</div>
			</div>
		</main>
		<footer>
			<% include ../partials/footer %>
		</footer>
	</div>
	<% include ../partials/scripts %>
	<script type="text/javascript" src="/socket.io/socket.io.js"></script>
	<script type="text/javascript" src="../js/game-script.js"></script>
</body>
</html>